{
  "name": "deploy-docker-ssh",
  "version": "0.5.0",
  "private": true,
  "description": "Deploys a docker container to a remote host",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build src/main.ts --license licenses.txt",
    "test": "jest --passWithNoTests",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iacobfred/deploy-docker-ssh.git"
  },
  "keywords": [
    "Actions",
    "Docker",
    "GitHub",
    "SSH"
  ],
  "author": "Jacob Jove <jacob.t.jove@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iacobfred/deploy-docker-ssh/issues"
  },
  "homepage": "https://github.com/iacobfred/deploy-docker-ssh#readme",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "nanoid": "^4.0.0"
  },
  "devDependencies": {
    "@jest/types": "^29.5.0",
    "@types/node": "^20.4.0",
    "@typescript-eslint/parser": "^5.54.1",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^4.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.5.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "~5.5.2"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
